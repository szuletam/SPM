<table class="query-columns">
  <tr>
    <td style="padding-left:0">
      <%= label_tag "available_columns", l(:description_available_columns) %>
      <br />
      <%= select_tag 'available_columns_position',
              options_for_select(query_available_inline_columns_options(query)),
              :multiple => true, :size => 10, :style => "width:150px",
              :ondblclick => "moveOptions(this.form.available_columns_position, this.form.selected_columns_position);" %>
    </td>
    <td class="buttons">
      <input type="button" value="&#8594;"
       onclick="moveOptions(this.form.available_columns_position, this.form.selected_columns_position);" /><br />
      <input type="button" value="&#8592;"
       onclick="moveOptions(this.form.selected_columns_position, this.form.available_columns_position);" />
    </td>
    <td>
      <%= label_tag "selected_columns", l(:description_selected_columns) %>
      <br />
      <%= select_tag tag_name,
              options_for_select(query_selected_inline_columns_options(query)),
              :id => 'selected_columns_position', :multiple => true, :size => 10, :style => "width:150px",
              :ondblclick => "moveOptions(this.form.selected_columns_positions, this.form.available_columns_position);" %>
    </td>
    <td class="buttons">
      <input type="button" value="&#8593;" onclick="moveOptionUp(this.form.selected_columns_position);" /><br />
      <input type="button" value="&#8595;" onclick="moveOptionDown(this.form.selected_columns_position);" />
    </td>
  </tr>
</table>

<% content_for :header_tags do %>
<%#= javascript_include_tag 'select_list_move' %>
<% end %>
