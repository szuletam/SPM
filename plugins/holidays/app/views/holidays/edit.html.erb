<div class="contextual">
<%= delete_link holiday_path(@holiday) %>
</div>

<%= title [l(:label_holidays), holidays_path], @holiday.date %>

<%= labelled_form_for @holiday, :url => holiday_path(@holiday), :method => :put do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p>
    <%= submit_tag l(:button_update) %>
  </p>
<% end %>

<% content_for :sidebar do %>
	<h3><%= l(:label_administration) %></h3>
	<div id="admin-menu">
		<ul>
			<%= render_menu :admin_menu %>
		</ul>
	</div>
<% end %>

<% html_title l(:label_holidays) %>

