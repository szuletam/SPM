<table class="query-columns">
  <tr>
    <td style="padding-left:0">
      <%= label_tag "available_columns", l(:description_available_columns) %>
      <br />
      <%= select_tag 'available_columns_project',
              options_for_select(query_available_inline_columns_options(query)),
              :multiple => true, :size => 10, :style => "width:150px",
              :ondblclick => "moveOptions(this.form.available_columns_project, this.form.selected_columns_project);" %>
    </td>
    <td class="buttons">
      <input type="button" value="&#8594;"
       onclick="moveOptions(this.form.available_columns_project, this.form.selected_columns_project);" /><br />
      <input type="button" value="&#8592;"
       onclick="moveOptions(this.form.selected_columns_project, this.form.available_columns_project);" />
    </td>
    <td>
      <%= label_tag "selected_columns", l(:description_selected_columns) %>
      <br />
      <%= select_tag tag_name,
              options_for_select(query_selected_inline_columns_options(query)),
              :id => 'selected_columns_project', :multiple => true, :size => 10, :style => "width:150px",
              :ondblclick => "moveOptions(this.form.selected_columns_project, this.form.available_columns_project);" %>
    </td>
    <td class="buttons">
      <input type="button" value="&#8593;" onclick="moveOptionUp(this.form.selected_columns_project);" /><br />
      <input type="button" value="&#8595;" onclick="moveOptionDown(this.form.selected_columns_project);" />
    </td>
  </tr>
</table>

<% content_for :header_tags do %>
<%#= javascript_include_tag 'select_list_move' %>
<% end %>

<%= javascript_tag do %>
$(document).ready(function(){
  $('.query-columns').closest('form').submit(function(){
    $('#selected_columns_project option').prop('selected', true);
  });
});
<% end %>