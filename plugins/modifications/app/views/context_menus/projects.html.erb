<ul>
  <li>
	<%= context_menu_link l(:button_delete),
	  project_path(:id => @id, :back_url => @back),
      :method => :delete, :data => {:confirm => l(:text_are_you_sure)}, :class => 'icon-del',
		:disabled => ! User.current.admin? %>
  </li>
  <li>
    <%= context_menu_link l(:button_copy),
      {:controller => 'projects', :action => 'copy', :id => @id},
      :method => :get, :class => 'icon-copy', :disabled => !(User.current.admin?) || ! User.current.allowed_to?(:add_project, @project) %>
  </li>
  <li>
	<%= context_menu_link l(:button_edit),
	  {:controller => 'projects', :action => 'settings', :id => @id, :back_url => @back},
      :method => :get, :class => 'icon-edit', :disabled => ! User.current.allowed_to?(:edit_project, @project) && ! User.current.admin? %>
  </li>
</ul>
